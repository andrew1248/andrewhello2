<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">

<html>

<head>

  <title>Brasil Home Page</title>

  <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>


  <script type="text/javascript">

      $(document).ready(function () {

          $.ajax({
              type: "GET",
              url: "/regularverbs_ir.xml",
              dataType: "xml",

              success: function (xml) {
                  var select = $('#mySelect');

                  $(xml).find('product').each(function () {
                      var title = $(this).attr('Verb');
                      var value = $(this).attr('EntryID');
                      select.append("<option value='" + value + "'>" + title + "</option>");
                  });

                  select.children(":first").attr("selected", true);
              }

          });

          $("#quote").load("/start_page.htm");

          $("#mySelect").change(function () {
              if ($('#mySelect').val() == "verbs") {
                  $("#quote").load("/start_page.htm");
              }
              if ($('#mySelect').val() != "verbs") {
                  $("#quote").load("/verbs/" + $('#mySelect').val());
              }
          });

      });

  </script>


      dayName [6] = "sábado";
      var time = new Date();
      var lmonth = months[time.getMonth() + 1];
      var lday = dayName[time.getDay()];
      var date = time.getDate();
      var year = time.getYear();
      if (year < 2000) {
          year = year + 1900;
      }
      document.write("<br>hoje é " + lday + " " + date + " de " + lmonth + " de " + year);

  <script language="JavaScript1.2">
      var months = new Array(13);
      months [1] = "janeiro";
      months [2] = "fevereiro";
      months [3] = "março";
      months [4] = "abril";
      months [5] = "maio";
      months [6] = "junho";
      months [7] = "julho";
      months [8] = "agosto";
      months [9] = "setembro";
      months [10] = "outubro";
      months [11] = "novembro";
      months [12] = "dezembro";
      var dayName = new Array(7);
      dayName [0] = "domingo";
      dayName [1] = "segunda-feira";
      dayName [2] = "terça-feira";
